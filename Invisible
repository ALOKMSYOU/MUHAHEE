toggleButton.Position = UDim2.new(0, 10, 0, 30)
toggleButton.Text = "‡∏à‡∏á‡∏°‡∏≠‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏´‡πá‡∏ô‡∏Å‡∏π"
toggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
