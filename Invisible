-- ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏ã‡∏ü‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á
saveButton.MouseButton1Click:Connect(function()
	local char = player.Character
	if char and char:FindFirstChild("HumanoidRootPart") then
		savedPosition = char.HumanoidRootPart.CFrame
		saveButton.Text = "‚úÖ ‡πÄ‡∏ã‡∏ü‡πÅ‡∏•‡πâ‡∏ß"
		task.delay(2, function()
			if saveButton then saveButton.Text = "‡πÄ‡∏ã‡∏ü‡∏û‡∏¥‡∏Å‡∏±‡∏î" end
		end)
	end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏ß‡∏≤‡∏£‡πå‡∏õ‡∏Å‡∏•‡∏±‡∏ö
warpBackButton.MouseButton1Click:Connect(function()
	if savedPosition and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
		player.Character.HumanoidRootPart.CFrame = savedPosition
		savedPosition = nil
		saveButton.Text = "‡πÄ‡∏ã‡∏ü‡∏û‡∏¥‡∏Å‡∏±‡∏î"
	end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏•‡∏ö‡∏û‡∏¥‡∏Å‡∏±‡∏î
clearButton.MouseButton1Click:Connect(function()
	savedPosition = nil
	saveButton.Text = "‡πÄ‡∏ã‡∏ü‡∏û‡∏¥‡∏Å‡∏±‡∏î"
end)
local loopWarp = false
local warpTarget = CFrame.new(0, 10, 0) -- << ‡∏õ‡∏£‡∏±‡∏ö‡∏û‡∏¥‡∏Å‡∏±‡∏î‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢‡∏ï‡∏≤‡∏°‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£

-- ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î Loop ‡∏ß‡∏≤‡∏£‡πå‡∏õ
local loopButton = Instance.new("TextButton", frame)
loopButton.Size = UDim2.new(0, 100, 0, 25)
loopButton.Position = UDim2.new(0, 10, 0, 90)
loopButton.Text = "üîÅ Loop ‡∏ß‡∏≤‡∏£‡πå‡∏õ: OFF"
loopButton.BackgroundColor3 = Color3.fromRGB(140, 80, 255)
loopButton.TextColor3 = Color3.fromRGB(255, 255, 255)
loopButton.Font = Enum.Font.SourceSans
loopButton.TextScaled = true

-- Loop ‡∏ß‡∏≤‡∏£‡πå‡∏õ
task.spawn(function()
	while true do
		if loopWarp and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
			player.Character.HumanoidRootPart.CFrame = warpTarget
		end
		task.wait(1) -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô 0.5 ‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏£‡πá‡∏ß‡∏Ç‡∏∂‡πâ‡∏ô‡πÑ‡∏î‡πâ
	end
end)

loopButton.MouseButton1Click:Connect(function()
	loopWarp = not loopWarp
	loopButton.Text = loopWarp and "üîÅ Loop ‡∏ß‡∏≤‡∏£‡πå‡∏õ: ON" or "üîÅ Loop ‡∏ß‡∏≤‡∏£‡πå‡∏õ: OFF"
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏û‡∏¥‡∏Å‡∏±‡∏î
local copyButton = Instance.new("TextButton", frame)
copyButton.Size = UDim2.new(0, 100, 0, 25)
copyButton.Position = UDim2.new(0, 10, 0, 115)
copyButton.Text = "üìã ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏û‡∏¥‡∏Å‡∏±‡∏î"
copyButton.BackgroundColor3 = Color3.fromRGB(80, 200, 255)
copyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
copyButton.Font = Enum.Font.SourceSans
copyButton.TextScaled = true

copyButton.MouseButton1Click:Connect(function()
	local char = player.Character
	if char and char:FindFirstChild("HumanoidRootPart") then
		local pos = char.HumanoidRootPart.Position
		local posString = string.format("Vector3.new(%.2f, %.2f, %.2f)", pos.X, pos.Y, pos.Z)
		setclipboard(posString)
		copyButton.Text = "‚úÖ ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡πÅ‡∏•‡πâ‡∏ß"
		task.delay(2, function()
			if copyButton then copyButton.Text = "üìã ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏û‡∏¥‡∏Å‡∏±‡∏î" end
		end)
	end
end)
